@model YAB.Models.CreateAccountViewModel

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/account.js"></script>

<h1>Create</h1>

<h4>Accounts</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InterestId" class="control-label"></label>
                <select onchange="submitVisible();" asp-for="InterestId" class="form-control" asp-items="ViewBag.AccountType">
                    <option disabled selected value=""> -- select account type -- </option>
                </select>
            </div>
@if(ViewBag.TypeName == "Investment")
{
            <div id="inputTerm" class="form-group">
                <label class="control-label" asp-for="TermYears"></label>
                <input class="form-control" asp-for="TermYears"/> @Html.DisplayNameFor(model => model.TermYears)
            </div>
}
@if(ViewBag.TypeName == "Loan")
{
            <div style="display:none" id="inputLoan" class="form-group">
                <label class="control-label" asp-for="LoanAmount"></label>
                <input class="form-control" asp-for="LoanAmount" /> @Html.DisplayNameFor(model=> model.LoanAmount)
            </div>
}
            <div id="submitDiv" style="display:none" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
