@model YAB.Models.NewAccountViewModel

@{
    ViewData["Title"] = "New Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/account.js"></script>

<h1>New</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Business" /> @Html.DisplayNameFor(model => model.Business)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select onchange="submitVisible();" asp-for="Type" class="form-control" asp-items="ViewBag.AccountTypeId">
                    <option disabled selected value=""> -- select account type -- </option>
                </select>
            </div>
            <div id="submitDiv" style="display:none" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
