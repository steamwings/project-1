@model YAB.Models.NewAccountViewModel

@{
    ViewData["Title"] = "New Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/js/account.js"></script>
<h1>New</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" onload="location.reload();" onchange="checkSubmit_New();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Business" /> @Html.DisplayNameFor(model => model.Business)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select onchange="updateFromType_New();" asp-for="TypeId" class="form-control" asp-items="ViewBag.AccountTypeId">
                    <option disabled selected value=""> -- select account type -- </option>
                </select>
            </div>
            <div id="divChecking" style="display:none" class="form-group">
                <label asp-for="InterestId" class="control-label"></label>
                <select id="InterestId_Checking" asp-for="InterestId" class="form-control" asp-items="ViewBag.InterestId_Checking">
                    <option disabled selected value=""> -- select interest rate -- </option>
                </select>
            </div>

            <div id="divTerm" style="display:none" class="form-group">
                <label asp-for="InterestId" class="control-label"></label>
                <select id="InterestId_Investment" asp-for="InterestId" class="form-control" asp-items="ViewBag.InterestId_Investment">
                    <option disabled selected value=""> -- select interest rate -- </option>
                </select>
                <label class="control-label" asp-for="Amount"></label>
                <input id="TermAmount" class="form-control" asp-for="Amount" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div id="divLoan" style="display:none" class="form-group">
                <div>
                    <label asp-for="InterestId" class="control-label"></label>
                    <select id="InterestId_Loan" asp-for="InterestId" class="form-control" asp-items="ViewBag.InterestId_Loan">
                        <option disabled selected value=""> -- select interest rate -- </option>
                    </select>
                </div>
                <div>
                    <label class="control-label" asp-for="Amount"></label>
                    <input id="LoanAmount" class="form-control" asp-for="Amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>
            <div id="divSubmit" style="display:none" class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
